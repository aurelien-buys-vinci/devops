<section>
    <h2>Mise a jour d'une Exoplanète</h2>
    <form method="post" action="/exoplanets/update">
        <div>
        <input type="hidden" name="id" value="{{exoplanet.id}}">
        <label>ID Exoplanète :</label>
        {{exoplanet.id}}
    </div>
        <div>
            <label>Nom de l'exoplanète découverte :</label>
            <input type="text" name="uniqueName" value="{{exoplanet.uniqueName}}">
        </div>
            <label>Classe Habitable de l'exoplanète :</label>
        <select name="hClass" id="hClass">
            <option value="{{exoplanet.hClass}}">{{exoplanet.hClass}}</option>
            <option value="Mésoplanète">Mésoplanète</option>
            <option value="Non habitable">Non habitable</option>
            <option value="Thermoplanète">Thermoplanète</option>
            <option value="Psychroplanète">Psychroplanète</option>
        </select>
        <div>
            <label>L'année de découverte</label>
            <input type="number" name="discoveryYear" value="{{exoplanet.discoveryYear}}">
        </div>
        <div>
            <label>IST de l'exoplanète :</label>
            <input type="text" name="ist" value="{{exoplanet.ist}}">
        </div>
        <div>
            <label>Classe de planète de l'exoplanète :</label>
            <select name="pClass" id="pClass">
            <option value="{{exoplanet.pClass}}">{{exoplanet.pClass}}</option>
            <option value="Terrienne chaude">Terrienne chaude</option>
            <option value="Sous-terrienne chaude">Sous-terrienne chaude</option>
            <option value="Super-terrienne chaude">Super-terrienne chaude</option>
            <option value="Sub-terrienne froide">Sub-terrienne froide</option>
            <option value="Super-terrienne froide">Super-terrienne froide</option>
            <option value="Neptunienne chaude">Neptunienne chaude</option>
            <option value="Mercurienne très chaude	">Mercurienne très chaude</option>
        </select>
        </div>
        <input type="submit" value="Mettre à jour">
    </form>
</section>